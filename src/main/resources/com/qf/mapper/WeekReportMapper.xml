<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.qf.mapper.WeekReportMapper">
    <resultMap id="weekReportMap" type="weekReport">
        <id property="wid" column="wid"></id>
        <result column="title" property="title"></result>
        <result property="create_date" column="create_date"></result>
        <result column="info" property="info"></result>
        <result property="score" column="score"></result>
        <result column="state" property="state"></result>
        <result property="sid" column="sid"></result>
        <association property="student" column="sid" select="getStudnetInfo" javaType="student"></association>
    </resultMap>
    <delete id="deleteWeekReportBySid" parameterType="int">
        delete from weekreport where sid = #{sid}
    </delete>
    <select id="getWeekReportListByUid" parameterType="int" resultMap="weekReportMap">
        select * from weekreport,employee,classes,student
        where employee.ename=classes.class_headteacher and classes.class_id=student.class_id and student.sid=weekreport.sid and employee.uid=#{uid}
    </select>
</mapper>