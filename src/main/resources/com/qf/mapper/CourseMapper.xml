<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.qf.mapper.CourseMapper">
    <insert id="addCourse" parameterType="java.lang.String">
     insert into course (course_name) values (#{course_name})
    </insert>
    <delete id="deleteCourse" parameterType="int">
        delete from course where course_id=#{course_id}
    </delete>
    <update id="updateCourse" parameterType="course">
        update course set course_name=#{course_name} where course_id=#{course_id}
    </update>
    <select id="getCourseList" resultType="course">
        select * from course
    </select>
    <select id="getCourseById" parameterType="int">
        select * from course where course_id=#{course_id}
    </select>
</mapper>